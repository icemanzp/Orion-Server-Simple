<?xml version="1.0" encoding="UTF-8"?>
<netty-server-info xmlns="http://www.wangfujing.com/nettyserver"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.wangfujing.com/nettyserver nettyserver.xsd ">
	<base-info>
		<server-name>netty-test</server-name>
		<server-root>/netty-test</server-root>
		<server-code>01</server-code>
		<server-desc>'{'"version":"1.0", "name":"wfj-onmi-channel-netty-test","desc":"nett-test-i1", "status":"{0}"}
		</server-desc>
		<max-income-thread-count>1000</max-income-thread-count>
		<ssh-info isSSL="false" needClientAuth="false">
			<keystore-path>keystore-path</keystore-path>
			<keystore-passwd>keystore-passwd</keystore-passwd>
			<keystore-certpasswd>keystore-certpasswd</keystore-certpasswd>
		</ssh-info>
		<base-params>
			<param param-name="contextConfigLocation" param-value="classpath*:/conf/applicationContext.xml,
            classpath*:/conf/beans-monitoring-spring-datasource.xml,
            classpath*:/conf/springmvc-servlet.xml,
            classpath*:/conf/plusingContext.xml" />
		</base-params>
	</base-info>

	<listener-infos>
		<listener listener-class="org.springframework.web.context.ContextLoaderListener" />
	</listener-infos>

	<filter-infos>
		<filter filter-class="com.wfj.netty.servlet.filter.Monitor" filter-name="Monitor">
			<filter-mapping  url-pattern="/*" />
		</filter>
	</filter-infos>

	<dispather-infos>
		<servlet servlet-class="org.springframework.web.servlet.DispatcherServlet" servlet-name="dispatcher" servlet-suffix="*.htm$,*.json" />
		<servlet servlet-class="org.apache.cxf.transport.servlet.CXFServlet" servlet-name="cxfpathcher" servlet-suffix="*/webservice/*" />
	</dispather-infos>

</netty-server-info>
